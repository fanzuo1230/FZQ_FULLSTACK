*
    padding 0
    margin 0


.movie
    width 100%
    &-head 
        // width 100%
        height 40%
        line-height 40px
        background-color #1e2025
        color #ffffff
        padding 0 10px
        box-sizing border-box
        display flex
        .iconfont
            width 16px
        .title
            flex 1
            text-align center
    
    &-info 
        padding 15px
        background-color #1e2025
        &__desc
            display flex
            .info-pic
                width 122px
                height 165px
                overflow 
                img
                    width 100%
            .info-container
                flex 1
                color #9b9da2
                font-size 12px
                margin-left 10px
                .name
                    color #ffffff
                    font-size 24px
                    font-weight bold
                


